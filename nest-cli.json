      }
    },
    "gateway": {
      "type": "application",
      "root": "gateway",
      "entryFile": "main",
      "sourceRoot": "gateway/src",
      "compilerOptions": {
        "tsConfigPath": "gateway/tsconfig.app.json"
      }
    }
  }
}
